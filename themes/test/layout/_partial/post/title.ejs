<% if (post.link){ %>
  <h1>
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <a href="<%- url_for(post.path) %>">
      <h2 class="<%= class_name %>"><%= post.title %></h2>
    </a>
  <% } else { %>
    <h1 class="<%= class_name %>">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>